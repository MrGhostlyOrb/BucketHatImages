extends layout.pug

block content
		nav(class='nav-extended' style = 'background-color:rgba(255,255,255,0.5);z-index:500;')
			div(class='nav-wrapper')
				a(href='/' class='brand-logo center' style = 'opacity:1') Bucket Hat Images
				img(style = 'width:4em;height:4em;' class = 'left' src = '/images/bhiLogo.png')
				ul(class='right hide-on-med-and-down')
					li
						a(id = 'install')
							i(class = 'material-icons') add_circle_outline
					li
						a A second link
					li
						a A third link
			div(class='nav-content')
				ul(class='tabs tabs-transparent')
					li(class='tab')
						a(href='/galleries') Galleries
					li(class='tab')
						a(href='/prints') Prints
					li(class='tab')
						a(href='/about') About
					li(class='tab')
						a.active(href='/contact') Contact
		div.row
			div.col.m2.s0
			div.col.m8.s12
				div.card
					div.card-content
						p Fill out the information below to send a message.
						div.row
							form.col.s12
								div.row
									div.input-field.col.s6
										i.material-icons.prefix person
										input(id='first_name' type='text' class='validate')
										label(for='first_name') First Name
									div.input-field.col.s6
										input(id='last_name' type='text' class='validate')
										label(for='last_name') Last Name
								div.row
									div.input-field.col.s12
										i.material-icons.prefix email
										input(id='email' type='email' class='validate')
										label(for='email') Email
								div.row
									div.input-field.col.s12
										i.material-icons.prefix mode_edit
										textarea(id = 'message' type = 'textarea' class = 'materialize-textarea')
										label(for = 'message') Message
			div.col.m2.s0
